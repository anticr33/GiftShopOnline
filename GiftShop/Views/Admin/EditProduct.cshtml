@model GiftShop.Models.Product

<h2>Редактиране на продукт</h2>

<form asp-action="EditProduct" asp-controller="Admin" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Име</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Цена</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="PurchasePrice" class="form-label">Цена на покупка</label>
        <input asp-for="PurchasePrice" class="form-control" />
    </div>

    <div class="form-group">
        <label>Категория</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
            <option value="">-- Изберете категория --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="SKU" class="form-label">SKU номер</label>
        <input asp-for="SKU" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Текуща снимка</label><br />
        <img src="~/@Model.ImageUrl" alt="Product Image" style="max-height: 150px;" />
    </div>

    <div class="mb-3">
        <label class="form-label">Качи нова снимка</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Запази промените</button>
    <a asp-action="Products" asp-controller="Admin" class="btn btn-secondary">Отказ</a>
</form>
