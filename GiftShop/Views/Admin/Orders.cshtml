@model List<GiftShop.Models.Order>

@{
    ViewData["Title"] = "Поръчки";
}

<h2>Всички поръчки</h2>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Дата</th>
            <th>Потребител</th>
            <th>Метод на плащане</th>
            <th>Детайли</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@order.UserId</td>
                <td>@order.PaymentMethod</td>
                <td>
                    <a href="@Url.Action("OrderDetails", "Admin", new { id = order.Id })" class="btn btn-info">
                        Виж повече
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
