@model GiftShop.Models.Product

<h1>Изтриване на продукт</h1>
<p>Сигурни ли сте, че искате да изтриете продукта <strong>@Model.Name</strong>?</p>

<form asp-action="DeleteProductConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Изтриване</button>
    <a asp-action="Products" class="btn btn-secondary">Отказ</a>
</form>
