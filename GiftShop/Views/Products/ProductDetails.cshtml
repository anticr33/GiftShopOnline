@model GiftShop.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p><strong>Цена:</strong> @Model.Price лв</p>
            <p>@Model.Description</p>
            <div class="my-4">
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <label>Количество:</label>
                    <input type="number" name="quantity" class="form-control" value="1" min="1">
                    <button type="submit" class="btn btn-dark btn-lg mb-2">Добави в количката</button>
                </form>
            </div>
            <form asp-controller="Order" asp-action="Checkout" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <input type="hidden" name="quantity" value="1">
                <button type="submit" class="btn btn-outline-dark btn-lg">Купи сега</button>
            </form>
        </div>
    </div>
</div>
