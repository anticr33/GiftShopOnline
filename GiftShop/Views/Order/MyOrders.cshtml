@model IEnumerable<GiftShop.Models.Order>

@{
    ViewData["Title"] = "Моите поръчки";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center mb-4">🛍 Моите поръчки</h2>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <h5>Все още нямате направени поръчки.</h5>
            </div>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>📌 Поръчка №</th>
                        <th>📅 Дата</th>
                        <th>💳 Метод на плащане</th>
                        <th class="text-center">📄 Детайли</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>#@order.Id</strong></td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                            <td>@(order.PaymentMethod == "Card" ? "Кредитна карта" : "Наложен платеж")</td>
                            <td class="text-center">
                                <a href="@Url.Action("OrderDetails", "Order", new { id = order.Id })" class="btn btn-info">
                                    🔍 Виж повече
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                ⬅ Обратно към началото
            </a>
        </div>
    </div>
</div>
