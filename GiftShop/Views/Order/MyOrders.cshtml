@model IEnumerable<GiftShop.Models.Order>

@{
    ViewData["Title"] = "Моите поръчки";
}

<h2>Моите поръчки</h2>

@if (!Model.Any())
{
    <p>Все още нямате направени поръчки.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Поръчка №</th>
                <th>Дата</th>
                <th>Метод на плащане</th>
                <th>Детайли</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.PaymentMethod</td>
                    <td>
                    <td><a href="@Url.Action("OrderDetails", "Order", new { id = order.Id })" class="btn btn-info">Виж повече</a></td>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
