@model GiftShop.Models.Order

<div class="container mt-5">
    <h2>Детайли за поръчка № @Model.Id</h2>
    <p><strong>Дата:</strong> @Model.OrderDate</p>
    <p><strong>Метод на плащане:</strong> @Model.PaymentMethod</p>
    <p><strong>Адрес за доставка:</strong> @Model.ShippingAddress</p>
    <p><strong>Метод на доставка:</strong> @Model.ShippingMethod</p>

    <h3>Продукти в поръчката:</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Продукт</th>
                <th>Количество</th>
                <th>Единична цена</th>
                <th>Общо</th> <!-- Добавяме нова колона за общата стойност -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@string.Format("{0:C}", item.Product.Price)</td>
                    <td>@string.Format("{0:C}", item.Product.Price * item.Quantity)</td> <!-- Изчисляваме общата цена -->
                </tr>
            }
        </tbody>
    </table>

    <h4><strong>Обща стойност на поръчката:</strong> @string.Format("{0:C}", Model.OrderItems.Sum(i => i.Product.Price * i.Quantity))</h4>
</div>
