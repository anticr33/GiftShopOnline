<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
            <h3>Цена: @string.Format("{0:C}", Model.Price)</h3>
            <form method="post" action="/Buy/Confirm">
                <input type="hidden" name="ProductId" value="@Model.Id" />
                <button type="submit" class="btn btn-success">Потвърдете покупката</button>
            </form>
        </div>
    </div>
</div>

