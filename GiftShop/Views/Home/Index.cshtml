<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/images/discount.png" class="d-block w-100" alt="Кутия">
        </div>
        <div class="carousel-item">
            <img src="/images/podaruk2.jfif" class="d-block w-100" alt="подарък2">
        </div>
        <div class="carousel-item">
            <img src="/images/slide3.jpg" class="d-block w-100" alt="Slide 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<script>
    function adjustCarouselHeight() {
        const carousel = document.getElementById("heroCarousel");
        const images = carousel.getElementsByTagName("img");

        if (window.innerWidth < 768) {
            carousel.style.height = "275px";
            for (let i = 0; i < images.length; i++) {
                images[i].style.height = "275px";
                images[i].style.objectFit = "cover";
            }
        } else {
            carousel.style.height = "550px";
            for (let i = 0; i < images.length; i++) {
                images[i].style.height = "550px";
                images[i].style.objectFit = "cover";
            }
        }
    }

    function adjustCategorySize() {
        const cards = document.querySelectorAll(".card");
        const images = document.querySelectorAll(".card-img-top");
        const bodies = document.querySelectorAll(".card-body");

        for (let i = 0; i < cards.length; i++) {
            if (window.innerWidth < 768) {
                images[i].style.height = "180px";
                images[i].style.objectFit = "cover";
                bodies[i].style.padding = "8px";
                bodies[i].style.fontSize = "14px";
            } else {
                images[i].style.height = "440px";
                bodies[i].style.padding = "20px";
                bodies[i].style.fontSize = "16px";
            }
        }
    }

    window.onload = function () {
        adjustCarouselHeight();
        adjustCategorySize();
    };

    window.onresize = function () {
        adjustCarouselHeight();
        adjustCategorySize();
    };
</script>

