<script>
    function adjustCarouselHeight() {
        const carousel = document.getElementById("heroCarousel");
        const images = carousel.getElementsByTagName("img");

        if (window.innerWidth < 768) {
            carousel.style.height = "275px";
            for (let i = 0; i < images.length; i++) {
                images[i].style.height = "275px";
                images[i].style.objectFit = "cover";
            }
        } else {
            carousel.style.height = "550px";
            for (let i = 0; i < images.length; i++) {
                images[i].style.height = "550px";
                images[i].style.objectFit = "cover";
            }
        }
    }

    function adjustCategorySize() {
        const cards = document.querySelectorAll(".card");
        const images = document.querySelectorAll(".card-img-top");
        const bodies = document.querySelectorAll(".card-body");
        const titles = document.querySelectorAll(".card-title");
        const texts = document.querySelectorAll(".card-text");
        const buttons = document.querySelectorAll(".card-body .btn");

        for (let i = 0; i < cards.length; i++) {
            if (window.innerWidth < 768) {
                // Мобилна версия – по-малка бяла зона
                images[i].style.height = "140px";
                images[i].style.objectFit = "cover";
                bodies[i].style.padding = "6px";
                bodies[i].style.minHeight = "65px"; // намалена височина
                titles[i].style.fontSize = "14px";
                texts[i].style.fontSize = "12px";
                buttons[i].style.fontSize = "12px";
                buttons[i].style.padding = "4px 10px";
            } else {
                // Десктоп версия – както беше
                images[i].style.height = "440px";
                images[i].style.objectFit = "cover";
                bodies[i].style.padding = "20px";
                bodies[i].style.minHeight = "unset";
                titles[i].style.fontSize = "18px";
                texts[i].style.fontSize = "14px";
                buttons[i].style.fontSize = "14px";
                buttons[i].style.padding = "6px 16px";
            }
        }
    }

    window.onload = function () {
        adjustCarouselHeight();
        adjustCategorySize();
    };

    window.onresize = function () {
        adjustCarouselHeight();
        adjustCategorySize();
    };
</script>
