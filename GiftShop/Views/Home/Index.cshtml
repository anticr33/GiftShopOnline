@{
    ViewData["Title"] = "Home Page";
}


<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/images/kutiqjpg.jpg" class="d-block w-100" alt="Кутия">
            <div class="carousel-caption d-none d-md-block">
                <h1>Industrial design meets fashion.</h1>
                <p>Atypical leather goods</p>
                <a href="#" class="btn btn-primary">Shop now</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/images/podaruk2.jfif" class="d-block w-100" alt="подарук2">
            <div class="carousel-caption d-none d-md-block">
                <h1>Obsessive Attention. Intelligent Effort.</h1>
                <p>Luxurious materials for better living.</p>
                <a href="#" class="btn btn-primary">Shop now</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/images/slide3.jpg" class="d-block w-100" alt="Slide 3">
            <div class="carousel-caption d-none d-md-block">
                <h1>Shop the Latest Collection.</h1>
                <p>Innovative designs in vibrant colors.</p>
                <a href="#" class="btn btn-primary">Shop now</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<style>
    /* Задаваме двойно по малка височина */
    #heroCarousel .carousel-item {
        height: 550px; /* Наполовина от предишната стойност */
    }

    #heroCarousel img {
        object-fit: cover; /* Изображението се запазва добре при новата височина */
        width: 100%; /* Широчината остава същата */
        height: 100%; /* Адаптира височината към 200px */
    }

    /* Центриране и стилизиране на текста */
    .carousel-caption {
        bottom: 20px; /* Можеш да регулираш според нуждите */
    }

        .carousel-caption h1 {
            font-size: 20px; /* По-малък шрифт */
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .carousel-caption p {
            font-size: 14px; /* По-малък текст */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .carousel-caption .btn {
            font-size: 12px; /* По-малък бутон */
            padding: 6px 12px;
        }
</style>

