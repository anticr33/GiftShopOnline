@model GiftShop.Models.Product

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p>@Model.Description</p>
            <h3>Цена: @string.Format("{0:C}", Model.Price)</h3>
            <a href="/Cart/Add/@Model.Id" class="btn btn-success">Добави в количката</a>
        </div>
    </div>
</div>
